     <% if(botid.state === 'unverified'){ %>
      <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
        </symbol>
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </symbol>
      </svg>
      <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
          This bot is not verified by our reviewers yet. 
        </div>
      </div>
    <% } %>

      <span class="hide" style="display:none !important" id="botid"><%=botid.botid%></span>
      <section class="text-gray-600 body-font">
  <div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
    <img alt="hero" src="<%=botid.botavatar%>">
    <div class="text-center lg:w-2/3 w-full">
      <h1 class="flex justify-center title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900" style="color: white !important"><%=botid.botname%><% if(botid.certification === 'certified') { %><img src="https://cdn.glitch.com/1be813f1-4233-4b7a-bf44-8a562481d51f%2FCertified.png?v=1625404757585" title="Certified Bot" height="45" width="60"><% } %></h1>
      <span class="font-bold text-2xl" style="color: var(--main-bg-color);">Prefix : <%=botid.botprefix%></span>
      <br>
      <br>
      <div class="double-val-label">
        <span class="primary">Votes</span>
        <span id="voteCount"></span>
      </div>
      <br>
      <br>
      <p class="mb-8 leading-relaxed deslong"><%-deslong%></p>
      <div class="flex justify-center">
        <a href="/bot/<%=botid.botid%>/vote"><button class="button-main"><i class="fas fa-arrow-up"></i> Vote </button></a>
        <a href="<%=botid.invite%>" class="underline"><button class="button-main" style="background:none !important ;color:var(--main-bg-color);font-weight:bold;"><i class="fas fa-arrow-right"></i> Invite </button></a>

      </div><br><br>


    <div class="bot-misc-links">

    <%if(botid.site){%>
      <div class="center-flex">
        <a href="<%=botid.site%>" rel="noopener noreffer" target="_blank" class="center-flex">
        <i class="fas fa-link" aria-hidden="true" style=" margin: 5px;">
        </i><p>Website</p>
        </a>
      </div>
    <% } %>

        <%if(botid.github){%>
      <div class="center-flex">
        <a href="<%=botid.github%>" rel="noopener noreffer" target="_blank" class="center-flex">
        <i class="fab fa-github" aria-hidden="true" style=" margin: 5px;">
        </i><p>Github</p>
        </a>
      </div>
    <% } %>

    <%if(botid.support){%>
      <div class="center-flex">
        <a href="<%=botid.support%>" rel="noopener noreffer" target="_blank" class="center-flex">
        <i class="fas fa-comment-dots" aria-hidden="true" style=" margin: 5px;">
        </i><p>Support</p>
        </a>
      </div>
    <% } %>
    </div>
    <br><br>
    <div class="tags-display center-flex">
      <% botid.tags.forEach(tag=>{ %>
      <a href="/s?search=<%=tag%>"
      <span class="tag-element"><%=tag%></span>
      </a>
      <% })%>
    </div>
      <br><br>
      <p class="fw-bold">Owner: <%= botid.botowner %></p>
    </div>
  </div>
</section>
<script>
const voteCount = document.getElementById("voteCount")
const botid = document.getElementById("botid").innerHTML

window.onload = getVotes()
function getVotes (){
  fetch('/bot/'+botid+'/getVotes').then(data=>data.json().then(jsonObj=>{
    for(key in jsonObj) {
  if (jsonObj.hasOwnProperty(key)) {
    voteCount.innerHTML = jsonObj[key]
  }
}
  }))
}
</script>
