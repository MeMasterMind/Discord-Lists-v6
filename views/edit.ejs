 <%- include('./templates/header.ejs') %>
 <%- include('./templates/nav.ejs') %> 

<!doctype html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="dist/notiflix-3.0.1.min.css" />

    <script src="dist/notiflix-3.0.1.min.js"></script>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <%- include("templates/header") %>

    <title>Discord Lists | Editing <%= botid.botname %></title>
  </head>
  <body>
    <u><center><h1>Editing <%= botid.botname %></h1></center></u><br>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <form class="needs-validation" method="POST" action="/botedit/success/<%= botid.botid %>" novalidate>
        <center><h6>Bot API TOKEN - <%= botid.bottoken %></h6></center><br>
        <div class="col-md-4">
          <label for="validationCustom01" class="form-label">Bot's Prefix *</label>
          <input class="form-control" type="text" placeholder="Disabled readonly input" aria-label="Disabled input example" value="<%= botid.botid %>" disabled readonly>
        </div><br>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">Bot's Prefix *</label>
            <input type="text" class="form-control" name="prefix" id="validationCustom01" value="<%= botid.botprefix %>" required>
            <div class="invalid-feedback">
              You must type your bot's prefix
            </div>
        </div><br>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">Brief Description About Your Bot *</label>
            <input type="text" class="form-control" name="short" id="validationCustom01" value="<%= botid.shortdes %>" maxlength="40" required>
            <div class="invalid-feedback">
              You must type a small description about your bot
            </div>
        </div><br>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">Detailed Description About Your Bot. *</label>
            <textarea class="form-control" name="long" id="validationCustom01" minlength="300" required><%= botid.longdes %></textarea>
            <div class="invalid-feedback">
              Your description must exceed 300 character limit.
            </div>
        </div><br>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">Website URL</label>
            <input type="text" class="form-control" name="site" id="validationCustom01" value="<%= botid.site %>">
        </div><br>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">GitHub URL</label>
            <input type="text" class="form-control" name="github" id="validationCustom01" value="<%= botid.github %>">
        </div><br>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">Support Server URL</label>
            <input type="text" class="form-control" name="server" id="validationCustom01" value="<%= botid.support %>">
        </div><br>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">Invite URL. *</label>
            <input type="text" class="form-control" name="invite" id="validationCustom01" value="<%= botid.invite %>" required>
        </div><br>
        <div class="col-12" style="display:flex; align-items:center; justify-content: center;">
          <button class="button-main" type="submit">Edit</button>
        </div><br>
        <h6>* = Required</h6>
      </form>
  </body>
</html>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>